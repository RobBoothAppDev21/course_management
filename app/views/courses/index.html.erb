
<%= render 'shared/search' %>

<hr>
<div class='course_index'>
  <% @courses.each do |course| %>
    <div class='course_card'>
      <div class='course_title_info_like_container'>
        <div class='course_title_container'>
          <div class='course_title_data'>
            <%= course.title.truncate(55) %>
          </div>
        </div>
        <div class='course_info_like_container'>
          <div class='course_info_container'>
            <div class='course_number_container'>
              <div class='course_number_data'>
                <%= course.number %>
              </div>
              <div class='course_section_count_container'>
                <div class='course_section_count_data'>
                  <%= 
                    link_to pluralize(course.sections.current_academic_year.count, 'section'), 
                    course_sections_url(course) 
                  %>
                </div>
              </div>
              <div class='course_credits_container'>
                <div class='course_credits_data'>
                  Credits: <%= course.credits %>
                </div>
              </div>
            </div>
          </div>
          <div class='course_like_container'>
            <div class='course_like_data'>
              â™¥
            </div>
          </div>
        </div>
      </div>
      <div class='course_eval_container'>
        <div class='course_eval_header_container'>
          <div class='course_eval_header_data'>
            Prior Course Evaluations
          </div>
        </div>
        <div class='course_eval_info_container'>
          <div class='course_overall_score_container'>
            <div class='course_overall_score_header'>
              Overall Score
            </div>
            <div class='course_overall_score_data'>
              <%= number_with_precision(course.calculate_average_overall_score, precision: 2) %>
            </div>
          </div>
          <div class='course_hours_required_container'>
            <div class='course_hours_required_header'>
              Hours Required
            </div>
            <div class='course_hours_required_data'>
              <%= number_with_precision(course.calculate_average_hours_committed, precision: 2) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>